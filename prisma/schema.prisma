generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id       Int        @id @default(autoincrement())
  name     String     @unique
  domain   String[]
  Employee Employee[]
  Rooms    Room[]
}

model Employee {
  id              Int       @id @default(autoincrement())
  name            String
  email           String    @unique
  companyId       Int
  admin           Boolean
  guest           Boolean
  currentRating   Int
  ratingsReceived Int
  company         Company   @relation(fields: [companyId], references: [id])
  Bookings        Booking[]
  Invite          Invite[]
}

model Room {
  id        Int     @id @default(autoincrement())
  name      String
  companyId Int
  Company   Company @relation(fields: [companyId], references: [id])
  desks     Desk[]
  Wall      Wall[]
}

model Desk {
  id            Int        @id @default(autoincrement())
  roomId        Int
  LocationRow   Int
  LocationCol   Int
  Height        Int
  Width         Int
  isMeetingRoom Boolean
  capacity      Int
  Room          Room       @relation(fields: [roomId], references: [id])
  Bookings      Booking[]
  facilities    Facility[]
}

model Wall {
  id          Int  @id @default(autoincrement())
  roomId      Int
  Pos1X       Int
  Pos1Y       Int
  Pos2X       Int
  Pos2Y       Int
  Room        Room @relation(fields: [roomId], references: [id])
}

model Facility {
  id         Int  @id @default(autoincrement())
  deskId     Int
  plugs      Int  @default(0)
  monitors   Int  @default(0)
  projectors Int  @default(0)
  Desk       Desk @relation(fields: [deskId], references: [id])
}

model Booking {
  id         Int      @id @default(autoincrement())
  deskId     Int
  createdAt  DateTime @default(now())
  startsAt   DateTime
  endsAt     DateTime
  employeeId Int
  isInvited  Boolean  @default(false)
  Desk       Desk     @relation(fields: [deskId], references: [id])
  Employee   Employee @relation(fields: [employeeId], references: [id])
  Invite     Invite[]
}

model Invite {
  id              Int      @id @default(autoincrement())
  bookingId       Int
  employeeId      Int
  accepted        Boolean  @default(false)
  Booking         Booking  @relation(fields: [bookingId], references: [id])
  invitedEmployee Employee @relation(fields: [employeeId], references: [id])
}
